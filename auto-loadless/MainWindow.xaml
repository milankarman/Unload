<Window x:Class="auto_loadless.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:auto_loadless"
        mc:Ignorable="d"
        Title="Auto Loadless" Height="720" Width="1280">
    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gridRight" Grid.Column="1" FlowDirection="LeftToRight" Margin="0,0,0,-1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Rectangle HorizontalAlignment="Stretch" Stroke="Black" Fill="Black" VerticalAlignment="Stretch" Margin="10,10,10,10"/>
            <Image x:Name="imageVideo" Margin="10,10,10,10" Source="/chrome_7fp5ib9rjN.png" StretchDirection="Both" Stretch="Uniform"/>
            <Slider x:Name="sliderTimeline" Margin="10,0,10,0" VerticalAlignment="Top" Grid.Row="1" Height="20" ValueChanged="sliderTimeline_ValueChanged"/>
            <Grid x:Name="gridVideoControls" Grid.Row="1" Margin="0,23,0,46">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="button" Content="&lt;&lt;" Margin="10,5,5,5" Grid.RowSpan="2" VerticalAlignment="Top"/>
                <Button x:Name="button_Copy" Content="&lt;" Margin="5,5,5,5" Grid.Column="1" Grid.RowSpan="2"/>
                <Button x:Name="button_Copy1" Content="&gt;" Margin="5,5,5,5" Grid.Column="2" Grid.RowSpan="2"/>
                <Button x:Name="button_Copy2" Content="&gt;&gt;" Margin="5,5,5,5" Grid.Column="3" Grid.RowSpan="2"/>
            </Grid>
            <Label x:Name="label" Content="Status..." Margin="10,69,10,0" Grid.Row="1" VerticalAlignment="Top" Height="21" Padding="0,0,0,0"/>
        </Grid>
        <Grid x:Name="gridLeft" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnConvert" Content="Convert Video to Image Sequence" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="200" Click="btnConvert_Click"/>
            <Button x:Name="btnLoad" Content="Load Image Sequence" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="200" Click="btnLoad_Click"/>
            <Button x:Name="btnPickLoadFrame" Content="Pick Frame as Load" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="200" Click="btnPickLoadFrame_Click"/>
            <Slider x:Name="sliderCropX" Grid.ColumnSpan="2" Margin="11,127,9,0" VerticalAlignment="Top" Width="200" ValueChanged="slidersCropping_OnValueChanged" Maximum="100"/>
            <Slider x:Name="sliderCropY" Grid.ColumnSpan="2" Margin="11,150,9,0" VerticalAlignment="Top" Width="200" ValueChanged="slidersCropping_OnValueChanged" Maximum="100"/>
            <Slider x:Name="sliderCropWidth" Grid.ColumnSpan="2" Margin="11,173,9,0" VerticalAlignment="Top" Width="200" ValueChanged="slidersCropping_OnValueChanged" Maximum="100" Minimum="1" Value="100"/>
            <Slider x:Name="sliderCropHeight" Grid.ColumnSpan="2" Margin="11,196,9,0" VerticalAlignment="Top" Width="200" ValueChanged="slidersCropping_OnValueChanged" Maximum="100" Value="100" Minimum="1"/>
            <Image x:Name="imageLoadFrame" Height="113" Margin="10,224,9,0" VerticalAlignment="Top" Width="201" Grid.ColumnSpan="2" Source="/chrome_7fp5ib9rjN.png"/>
            <Button x:Name="btnCheckSimilarity" Content="Check Similarity to Current Frame" HorizontalAlignment="Left" Margin="10,352,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="200" Click="btnCheckSimilarity_Click"/>
            <Label x:Name="label1" Content="Minimum Similarity" HorizontalAlignment="Left" Margin="11,401,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="200"/>
            <TextBox x:Name="txtSimilarity" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="11,432,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" Text="0.90"/>
            <Button x:Name="btnCountLoads" Content="Count Loads" HorizontalAlignment="Left" Margin="11,455,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="199" Click="btnCountLoads_Click"/>
            <ListBox x:Name="lbxLoads" Margin="10,480,10,10" Grid.ColumnSpan="2" SelectionChanged="lbxLoads_SelectionChanged"/>
        </Grid>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="176,-179,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>

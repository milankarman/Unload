<Window x:Class="unload.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:unload"
        mc:Ignorable="d"
        Title="Unload" Height="auto" Width="360" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" WindowStartupLocation="CenterOwner" Background="{DynamicResource bgDark}" Closed="Window_Closed">
    <Grid>
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Text: 0 / 0" Margin="0,0,0,5" VerticalAlignment="Top"/>
            <ProgressBar Grid.Row="1" Grid.Column="0" x:Name="progressBar" Height="22" Margin="0,0,5,0"/>
            <Button Grid.Row="1" Grid.Column="1" x:Name="buttonCancel" Content="Cancel" Width="60" Click="buttonCancel_Click"/>
        </Grid>
        <Rectangle Stroke="{DynamicResource highlight}"/>
    </Grid>
</Window>
